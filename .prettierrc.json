{
    "useTabs": false,
    "tabWidth": 2,
    "trailingComma": "all",
    "semi": true,
    "singleQuote": true,
    "printWidth": 80,
    "bracketSameLine": false,
    "endOfLine": "auto",
    "htmlWhitespaceSensitivity": "ignore",
    "overrides": [
        {
            "files": ["*.ts", "*.mts", "*.d.ts"],
            "options": {
                "parser": "typescript"
            }
        },
        {
            "files": ["*.html"],
            "options": {
                "parser": "html"
            }
        },
        {
            "files": ["*.component.html"],
            "options": {
                "parser": "angular"
            }
        }
    ]
}
